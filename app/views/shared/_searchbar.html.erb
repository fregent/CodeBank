<%= form_with(url: my_snippets_path, method: :get, class: "search-bar search-form d-flex my-4") do |form| %>
  <%= form.select :language, options_for_select(["All language","Ruby", "JavaScript", "HTML", "CSS", "Java", "Python", "PHP", "C", "TypeScript", "Swift", "Bash", "Multiple", "Objective-C", "C++", "C#"]), class: 'form-control' %>
  <%= form.text_field :query, class: "form-control", placeholder: "Type a keyword" %>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>
