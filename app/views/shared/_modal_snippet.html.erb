<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  <h4 class="btn-book">Add a new code</h4>
</button>
<br>
<br>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Adding your code as a new Snippet!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" data-backdrop="false"></button>
      </div>
      <div class="modal-body" style="
                    padding-right: 50px;
                    padding-left: 50px;
                    margin-top: 15px;
                    margin-bottom: 15px;">

        <% @snippets.each do |snippet| %>
          <%= snippet.name %>

          <%= simple_form_for do |f| %>
            <div>
              <%= f.input :name, as: :string, label: 'Title:', placeholder: "Type your code's title here...", input_html: { style: 'border-color: black;' } %>
              <%= f.input :content, as: :text, label: 'Your code:', placeholder: "Enter your code here", input_html: { style: 'border-color: black;' } %>
              <%= f.input :language, as: :select, collection: [:Ruby, :JavaScript, :HTML, :CSS, :Java, :Python, :PHP, :C,
                :TypeScript, :Swift, :Bash, :Multiple], label: 'Select the language of your code:', placeholder: "What language?", input_html: { style: 'border-color: black;' } %>
              <%= f.input :private, as: :boolean, label: 'Do you want to make it private?', checked_value: 'Yes, make it private', unchecked_value: 'No, make it public', input_html: { style: 'border-color: black;' } %>
              <%= f.button :submit, class: "btn btn-primary mt-3", id: :btn_add %>
            </div>
          <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>
