<div class="d-flex justify-content-between my-5">
  <%= link_to "<span><i class='fa-solid fa-code pe-1'></i>All Snippets</span>".html_safe, snippets_path, class:"btn btn-secondary rounded-pill btn-sm" %>
  <%= render "shared/modal_snippet", snippets: @snippet if user_signed_in? %>
</div>

<%= render "shared/searchbar"%>

  <% if @search_results.present? %>
      <% if @search_results.count == 1 %>
        <h2>1 result found for "<%= @query %>"</h2>
       <% else %>
        <h2><%= @search_results.count %> results found for "<%= @query %>"</h2>
      <% end %>

        <div class="card-container my-5">
          <% @search_results.each do |result| %>
            <%= render "shared/snippet_cards", snippet: result %>
          <% end %>
        </div>

   <% else %>

    <% if @snippets.count == 1 %>
      <h2>You have 1 Snippet</h2>
     <% else %>
      <h2>You have <%= @snippets.count %> snippets</h2>
    <% end %>

    <div class="card-container my-5">
      <% @snippets.each do |snippet| %>
        <%= render "shared/snippet_cards", snippet: snippet %>
      <% end %>
    </div>
<% end %>
