<section class="vh-100 gradient-custom">
  <div class="container-fluid py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
              <p class="text-white-50 mb-5">Please enter your email and password!</p>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form'}) do |f| %>

                <%= f.error_notification %>

                <div class="form-group">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { class: 'form-control', autocomplete: 'email' },
                              label_html: { class: 'control-label' } %>
                </div>

                <div class="form-group">
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { class: 'form-control', autocomplete: 'new-password' },
                              label_html: { class: 'control-label' } %>
                </div>

                <div class="form-group">
                  <%= f.input :password_confirmation,
                              required: true,
                              input_html: { class: 'form-control', autocomplete: 'new-password' },
                              label_html: { class: 'control-label' } %>
                </div>

                <div class="form-group">
                  <%= f.button :submit, "Register", class: 'btn btn-primary btn-block btn btn-primary btn-lg px-5' %>
                </div>
              <% end %>

              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!"></a></p>

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>

            </div>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
